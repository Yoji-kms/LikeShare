<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentBtnStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@color/transparent</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">4dp</item>

    </style>

    <style name="LikeBtnStyle" parent="TransparentBtnStyle">
        <item name="iconTint">@color/like_color_selector</item>
    </style>

    <style name="SaveBtnFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/save_color_selector</item>
        <item name="backgroundTint">@color/design_default_color_secondary</item>
        <item name="background">@color/transparent</item>
    </style>
</resources>