<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:showPaths = "true"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postListViewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_post" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createPostFab"
        tools:visibility="gone"
        android:src="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:fabCustomSize="@dimen/fab_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/create_post_description" />

    <TextView
        android:id="@+id/prevContentTxtViewId"
        android:padding="8dp"
        android:minLines="2"
        android:background="@color/cancel_panel_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelBtnId"/>

    <ImageButton
        android:id="@+id/cancelBtnId"
        app:layout_constraintTop_toTopOf="@id/prevContentTxtViewId"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/prevContentTxtViewId"
        android:contentDescription="@string/cancel_description" />

    <View
        android:id="@+id/blankViewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cancel_panel_color"
        app:layout_constraintTop_toBottomOf="@id/cancelBtnId"
        app:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
        app:layout_constraintStart_toEndOf="@id/prevContentTxtViewId"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/newContentEdtTxtId"
        android:paddingHorizontal="8dp"
        android:minLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveBtnId"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/type_a_message"
        android:background="@color/white"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/saveBtnId"
        android:enabled="false"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_save"
        app:layout_constraintStart_toEndOf="@id/newContentEdtTxtId"
        app:layout_constraintTop_toTopOf="@id/newContentEdtTxtId"
        app:layout_constraintBottom_toBottomOf="@id/newContentEdtTxtId"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.motion.widget.MotionLayout>