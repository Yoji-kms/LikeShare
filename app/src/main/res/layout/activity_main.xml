<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity"
    tools:showPaths="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayoutId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/prevContentTxtViewId"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postListViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_post" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createPostFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/create_post_description"
        android:src="@drawable/ic_add"
        app:fabCustomSize="@dimen/fab_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/prevContentTxtViewId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/cancel_panel_color"
        android:minLines="2"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
        app:layout_constraintEnd_toStartOf="@id/cancelBtnId"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/cancelBtnId"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_cross"
        android:contentDescription="@string/cancel_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/prevContentTxtViewId"
        app:layout_constraintTop_toTopOf="@id/prevContentTxtViewId" />

    <View
        android:id="@+id/blankViewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cancel_panel_color"
        app:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/prevContentTxtViewId"
        app:layout_constraintTop_toBottomOf="@id/cancelBtnId" />

    <EditText
        android:id="@+id/newContentEdtTxtId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="@string/type_a_message"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveBtnId"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtnId"
        style="@style/SaveBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:icon="@drawable/ic_save"
        app:layout_constraintBottom_toBottomOf="@id/newContentEdtTxtId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/newContentEdtTxtId"
        app:layout_constraintTop_toTopOf="@id/newContentEdtTxtId" />
</androidx.constraintlayout.motion.widget.MotionLayout>