<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300"
        motion:motionInterpolator="linear">
       <OnClick motion:targetId="@id/createPostFab"
          motion:clickAction="transitionToEnd" />
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300"
        motion:motionInterpolator="linear">
        <OnClick motion:targetId="@id/cancelBtnId"
            motion:clickAction="transitionToStart"/>
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/createPostFab"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:fabCustomSize="@dimen/fab_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
        </Constraint>

        <Constraint
            android:id="@+id/prevContentTxtViewId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/cancelBtnId"/>

        <Constraint
            android:id="@+id/cancelBtnId"
            motion:layout_constraintTop_toTopOf="@id/prevContentTxtViewId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/prevContentTxtViewId" />

        <Constraint android:id="@id/newContentEdtTxtId"
            android:paddingHorizontal="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/saveBtnId"
            motion:layout_constraintTop_toBottomOf="@id/prevContentTxtViewId"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Constraint>

        <Constraint
            android:id="@+id/saveBtnId"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintStart_toEndOf="@id/newContentEdtTxtId"
            motion:layout_constraintTop_toBottomOf="parent"
            motion:layout_constraintBottom_toBottomOf="@id/newContentEdtTxtId"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/createPostFab"
            android:visibility="invisible"
            android:rotation="-45"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="16dp"
            motion:fabCustomSize="@dimen/fab_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
        </Constraint>

        <Constraint
            android:id="@+id/prevContentTxtViewId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/newContentEdtTxtId"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/cancelBtnId"/>

        <Constraint
            android:id="@+id/cancelBtnId"
            motion:layout_constraintTop_toTopOf="@id/prevContentTxtViewId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/prevContentTxtViewId" />

        <Constraint android:id="@id/newContentEdtTxtId"
            android:paddingHorizontal="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/saveBtnId"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Constraint>

        <Constraint
            android:id="@id/saveBtnId"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintStart_toEndOf="@id/newContentEdtTxtId"
            motion:layout_constraintBottom_toBottomOf="@id/newContentEdtTxtId"
            motion:layout_constraintTop_toBottomOf="@id/prevContentTxtViewId"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>
</MotionScene>